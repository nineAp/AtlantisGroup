<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_blue"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/add_to_fav_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Удалить все товары?"
        android:textColor="@android:color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/add_to_fav_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Чтобы не потерять товары, добавьте их в избранное"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginVertical="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear_cart"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="clip_horizontal"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="Удалить"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/add_to_fav_btn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="clip_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_weight="5"
            android:background="@drawable/button_background_blue"
            android:text="В избранное" />

    </LinearLayout>

</LinearLayout>